@model MyVilla_Web.Models.VM.VillaNumberDeleteVM
@{
    ViewData["Title"] = "DeleteVillaNumber";
}

<form asp-action="DeleteVillaNumber">
    <br />
    <div class="container border p-3">
        <h1 class="text-primary">Delete Villa Number</h1>
        <hr />
        <input hidden asp-for="VillaNumber.VillNo" />
        <div class="row">
            <div class="col-2">
                <label asp-for="VillaNumber.VillNo" class="control-label pt-2" style="font-size:20px"></label>
            </div>
            <div class="col-10 pb-3">
                <input disabled asp-for="VillaNumber.VillNo" class="form-control" />
            </div>

            <div class="col-2">
                <label asp-for="VillaNumber.VillaId" class="control-label pt-2" style="font-size:20px"></label>
            </div>
            <div class="col-10 pb-3">
                <select disabled asp-for="VillaNumber.VillaId" class="form-select" asp-items="@Model.VillaList">
                    <option disabled>--Select Villa--</option>
                </select>
            </div>
            <div class="col-2">
                <label asp-for="VillaNumber.SpecialDetails" class="control-label pt-2" style="font-size:20px"></label>
            </div>
            <div class="col-10 pb-3">
                <textarea readonly asp-for="VillaNumber.SpecialDetails" class="form-control" rows="5"></textarea>
            </div>
            <div class="col-5 offset-2">
                <a asp-controller="VillaNumber" asp-action="IndexVillaNumber" class="btn btn-primary form-control">
                    Back To List
                </a>
            </div>
            <div class="col-5">
                <input type="submit" value="Delete" class="btn btn-success form-control" />
            </div>
        </div>

    </div>
</form>
